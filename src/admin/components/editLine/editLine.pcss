.edit-line-component {
  width: 100%;
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.text {
  margin-bottom: 0;
}
.input {
  width: 60%;
}

.buttons {
  display: flex;
}

.button-icon {
  margin-right: 20px;
  background: transparent;

  &:last-child {
    margin-right: 0;
  }
}

.pencil {
  margin-right: 12px;
}