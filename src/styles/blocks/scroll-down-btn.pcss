.hero__bottom-buttons {
  display: inline-block;
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 600;
  text-decoration: none;

  &:after {
    content: "";
    display: block;
    background: svg-load('scroll.svg', fill=white, width=100%, height=100%) center center no-repeat;
    width: 28px;
    height: 30px;
    margin-left: 15px;
  }
}

.scroll-down-btn {
  border: none;
  background: transparent;
  color: white;
}