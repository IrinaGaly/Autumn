extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container#hero__container
        header.header
          a.logo(href="#") IG
          nav.menu.menu__header
            - var menuItems = ["About", "Skills", "Works", "Reviews"]
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}
          - var  socials = ["insta", "vk", "github", "envelope"]
          ul.socials.socials__header
            each item in socials
              li.socials__item
                a(href="#", target="_blank").socials__link
                  +icon(item, "socials__icon")               
          a(href="#").gamburger#gamburger-menu
            +icon("menu", "gamburger__icon")

        .userinfo
          .userinfo__title Personal website of a web developer
          .userinfo__name Irina Galygina

        .hero__bottom-buttons
          button.scroll-down-btn Scroll

      .gamburger__inner#gamburger__inner
        .gamburger-col-left
          a.logo.logo__gamburger(href="#") IG
        .gamburger-col-right
          a(href="#").gamburger__close#gamburger__close
                  +icon("cross", "close__icon")  
          - var menuItems = ["About", "Skills", "Works", "Reviews"]
          ul.menu__list.gamburger__menu_list
            each item in menuItems
              li.menu__item.gamburger__menu_item
                a(href="#").menu__link.gambuerger__menu_link #{item}
          - var  socials = ["insta", "vk", "github", "envelope"]
          ul.socials.socials__gamburger_nav
            each item in socials
              li.socials__item.socials__gamburger_item
                a(href="https://www.instagram.com/irina__galygina/", target="_blank").socials__link.socials__gamburger_link
                  +icon(item, "socials__icon, socials__icon_blue")  

    section.about.about__container
      .container
        .about__user-inner
          .about__user
            .user__avatar
              .user__avatar-style
                +image("content/Iri.JPG", 'user__avatar-pic')
            -
              var userInfo = [
                ["Live in:", "Prague"],
                ["Age:", "26 years old"],
                ["Place of birth:", "Magnitogorsk"]
              ];

            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
          .about__content 
            .about__desc Hi, my name is 
            .about__title Irina Galygina
            .about__text-info
              p I am developing modern websites and applications. I like doing interesting and modern projects.
            .about__ps
              | This site was developed as part of my studies at the LoftSchool. I'll refresh my content in it a bit later. Until then, look at how cool and beautiful everything is here!
  .middle-section
    section.values
      .container.values__container
        .values__title-text How can I help you
        .values__content
          p This site was developed as part of my studies at the LoftSchool. I'll refresh my content in it a bit later. Until then, look at how cool and beautiful everything is here!
      .values__widget
        #skills-component
    section.works
      .container
        .section-title.works-title My works
        .works__content 
          #preview-component
    section.reviews
      .container
        #slider-component
  footer.footer
    .container.footer__container
      .footer__copyright
        .footer__copyright-col
          .footer__copyright-date &copy; 2020  
          .footer__copyright-userinfo
            .footer__copyrigth-name Irina Galygina
            .footer__copyright-desc Personal website of a web developer
      .footer__nav
        nav.menu.footer__nav-menu
              - var menuItems = ["About", "Skills", "Works", "Rewievs"]
              ul.menu__list
                each item in menuItems
                  li.menu__item
                    a(href="#").menu__link #{item}
        .footer__content-inner  
          .footer__desc-wrap          
            .footer__desc This site was developed as part of my studies at the Loftschool Online Education        
            .footer__soc
              - var  socials = ["insta", "vk", "github", "envelope"]
              ul.socials
                each item in socials
                  li.socials__item
                    a(href="#", target="_blank").socials__link.socials__link-footer
                      +icon(item, "socials__icon")
          .footer__quote
            .footer__quote-text Always write code as if it will be accompanied by a violent psychopath who knows where you live.
              .footer__quote-c Martin Golding
